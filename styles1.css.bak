/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Global Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    padding: 20px;
    color: #333;
}

header {
    background-color: #333;
    color: white;
    padding: 15px;
    text-align: center;
}

h1 {
    font-size: 32px;
}

/* Cart Button */
.cart-btn {
    background-color: #ff9900;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    display: inline-block;
    margin-top: 10px;
}

.cart-btn:hover {
    background-color: #e68900;
}

/* Product Section */
.products {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 20px;
}

.product {
    background-color: white;
    border: 1px solid #ddd;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
}

.product:hover {
    transform: scale(1.05);
}

.product img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
}

.product h3 {
    margin: 10px 0;
    font-size: 20px;
}

.product p {
    font-size: 18px;
    color: #ff4500;
    margin: 10px 0;
}

.product button {
    background-color: #28a745;
    color: white;
    padding: 10px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

.product button:hover {
    background-color: #218838;
}

/* Cart Modal */
.cart-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    justify-content: center;
    align-items: center;
}

.cart-content {
    background-color: white;
    padding: 20px;
    max-width: 400px;
    width: 100%;
    border-radius: 8px;
    text-align: center;
}

.cart-content h2 {
    margin-bottom: 15px;
}

.cart-content ul {
    list-style-type: none;
    padding: 0;
    margin-bottom: 15px;
}

.cart-content li {
    margin-bottom: 10px;
}

.cart-content button {
    background-color: #dc3545;
    padding: 10px 20px;
    border-radius: 5px;
}

.cart-content button:hover {
    background-color: #c82333;
}
